<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_bathroom__details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cs.tufts.edu.easy.activities.BathroomDetailsActivity"
    tools:showIn="@layout/activity_bathroom__details">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bathroom_title"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:text="Title"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp"
        android:textAlignment="center" />

    <!--android:layout_alignParentStart="true"-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:clipToPadding="false"
        android:layout_gravity="fill_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/bathroom_id"
                android:layout_marginBottom="134dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1" />
        </LinearLayout>
    </ScrollView>

    <CheckBox
        android:text="Locked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:id="@+id/detailsLockedBox"
        android:layout_below="@+id/ratingStars"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:clickable="false"
        android:focusable="false" />

    <CheckBox
        android:text="Baby Station"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailsBabyBox"
        android:layout_alignBaseline="@+id/detailsLockedBox"
        android:layout_alignBottom="@+id/detailsLockedBox"
        android:layout_alignParentEnd="true"
        android:clickable="false"
        android:focusable="false"
        android:checked="false" />

    <CheckBox
        android:text="Restricted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailsCustomersBox"
        android:layout_alignBaseline="@+id/detailsLockedBox"
        android:layout_alignBottom="@+id/detailsLockedBox"
        android:layout_toEndOf="@+id/detailsLockedBox"
        android:layout_marginStart="32dp"
        android:clickable="false"
        android:focusable="false"
        android:checked="false" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingStars"
        android:layout_marginTop="54dp"
        android:isIndicator="true"
        android:layout_below="@+id/bathroom_title"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
