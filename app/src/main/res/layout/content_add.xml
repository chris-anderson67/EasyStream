<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cs.tufts.edu.easy.AddActivity"
    tools:showIn="@layout/activity_add">

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cleanlinessBar"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/ratingBar" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Bathroom Name"
        android:ems="10"
        android:layout_marginStart="12dp"
        android:id="@+id/name"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/checkBox" />

    <TextView
        android:text="Rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rating"
        android:textSize="24sp"
        android:layout_below="@+id/name"
        android:layout_alignStart="@+id/ratingBar"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Username"
        android:ems="10"
        android:id="@+id/username"
        android:layout_below="@+id/cleanlinessBar"
        android:layout_alignStart="@+id/cleanlinessBar" />

    <CheckBox
        android:text="Gender Neutral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/neutral_check"
        android:layout_below="@+id/username"
        android:layout_alignStart="@+id/username" />

    <CheckBox
        android:text="Baby Station"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/neutral_check"
        android:layout_alignStart="@+id/neutral_check"
        android:id="@+id/baby_check" />

    <CheckBox
        android:text="Customers Only"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/baby_check"
        android:layout_alignStart="@+id/baby_check"
        android:id="@+id/customers_check" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:layout_below="@+id/rating"
        android:layout_alignStart="@+id/name"
        android:layout_marginTop="19dp" />

    <TextView
        android:text="Cleanliness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cleanliness"
        android:textSize="24sp"
        android:layout_marginBottom="24dp"
        android:layout_above="@+id/cleanlinessBar"
        android:layout_alignStart="@+id/cleanlinessBar" />

    <CheckBox
        android:text="Female"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/username"
        android:id="@+id/female_check"
        android:layout_below="@+id/username" />

    <CheckBox
        android:text="Male"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/male_check"
        android:layout_toEndOf="@+id/customers_check"
        android:layout_below="@+id/username" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Comment"
        android:ems="10"
        android:id="@+id/comment"
        android:layout_below="@+id/customers_check"
        android:layout_alignStart="@+id/customers_check"
        android:layout_marginTop="15dp" />

    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/customers_check"
        android:layout_marginStart="16dp"
        android:id="@+id/formsubmit" />

</RelativeLayout>
